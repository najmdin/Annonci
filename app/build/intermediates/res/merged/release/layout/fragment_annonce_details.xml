<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/layout_padding_top"
        android:id="@+id/relative_layout_add_annonce"
    android:layout_marginBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp">
        <EditText
            android:id="@+id/edit_text_annonce_titre"
            style="@style/AddAnnonceForm"
            android:hint="@string/hint_annonce_titre"
            android:imeOptions="actionNext" />
        <EditText
            android:id="@+id/edit_text_annonce_desc"
            style="@style/AddAnnonceForm"
            android:layout_below="@+id/edit_text_annonce_titre"
            android:hint="@string/hint_annonce_desc"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"/>
        <Spinner
            android:layout_gravity="right"
            android:layout_width="303dp"
            android:layout_height="47dp"
            android:id="@+id/edit_text_annonce_cat"
            android:layout_alignParentRight="true"
            ></Spinner>
        <EditText
            android:id="@+id/edit_text_annonce_prix"
            style="@style/AddAnnonceForm"
            android:hint="@string/hint_annonce_prix"
            android:layout_below="@+id/edit_text_annonce_cat"
            android:imeOptions="actionNext" />
        <Spinner
            android:layout_gravity="right"
            android:layout_width="303dp"
            android:layout_height="47dp"
            android:id="@+id/edit_text_annonce_type"
            android:layout_alignParentRight="true"
            ></Spinner>
    <ImageButton
            android:id="@+id/annonce_image_button"
            android:layout_width="match_parent"
            android:layout_below="@id/edit_text_annonce_type"
            android:layout_height="150dp"
            android:layout_marginBottom="12dp"
            android:background="@android:color/darker_gray"
            android:scaleType="centerCrop"
            android:contentDescription="Profile Image" />

    </LinearLayout><!-- From: file:/C:/Users/najm/AndroidStudioProjects/Annoncy/app/src/main/res/layout/fragment_annonce_details.xml -->