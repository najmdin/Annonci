<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:gravity="top"
    android:background="#ffffff"
    android:weightSum="1"
    android:name="com.example.najm.annonce.Fragment.User_view"
    tools:context="com.example.najm.annonce.Fragment.User_view"
   >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="55dp"
        android:orientation="horizontal"
        android:id="@+id/annonce_view"
        >

        <ImageView
            android:id="@+id/drawer_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/drawer_itemName"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"

            />
    </LinearLayout>
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.najm.stage.Fragment.User_view"
        android:name="com.example.najm.stage.Fragment.User_view"
        android:id="@+id/itemLayout"
        android:layout_width="fill_parent"
        android:minHeight="10dp"
        android:layout_height="450dp"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?android:attr/activatedBackgroundIndicator"
        android:layout_marginBottom="250dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titre"
            android:textColor="#000"
            android:textSize="@dimen/big_text_size"
            android:textStyle="bold"
             />


        <EditText
            android:id="@+id/tv_titre"
            android:hint="Name"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#08f9b7"
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prix"
            android:textColor="#000"
            android:textSize="@dimen/big_text_size"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/tv_price"
            android:hint="Price"
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:textAlignment="center"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#000"
            android:textSize="@dimen/big_text_size"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/tv_desc"
            android:hint="Desc"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:textAlignment="center"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CatÃ©gorie"
            android:textColor="#000"
            android:textSize="@dimen/big_text_size"
            android:textStyle="bold"
            />
        <Spinner
            android:layout_width="124dp"
            android:layout_height="50dp"
            android:id="@+id/etCat"
            android:gravity="left"></Spinner>
        <ImageButton
            android:id="@+id/Annonce_image_thumbnail"
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:gravity="center"
            android:background="@android:color/darker_gray"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="130dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/UpdateAnnonce"
            android:text="Save"
            android:layout_alignLeft="@+id/button2"
           />
        <Button android:layout_height="wrap_content"
            android:layout_width="130dp"
        android:id="@+id/DeleteAnnonce"
        android:text="Delete"
        android:layout_below="@+id/button2"
        android:layout_alignRight="@+id/button1"
      />
    </LinearLayout>
