<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/annonce_view"
    android:background="#ffffff"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#379564"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Profil"
            android:id="@+id/textView3"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:src="@drawable/profil"
            android:layout_marginLeft="170dp" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="430dp"
        android:orientation="vertical"
        android:paddingTop="1dp"
        android:layout_marginBottom="250dp"
        tools:context="com.example.najm.stage.Fragment.Profil"
        android:id="@+id/itemLayout"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:background="?android:attr/activatedBackgroundIndicator">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#000"
            android:textSize="@dimen/big_text_size"
            android:textStyle="bold"
             />
        <EditText
            android:id="@+id/tv_name"
            android:hint="Name"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#08f9b7"
            android:layout_height="wrap_content"
            android:layout_width="135dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textColor="#000"
            android:textSize="@dimen/big_text_size"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_user"
            android:textSize="15dp"
            android:textColor="#f8a9b7"
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:textAlignment="center"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#000"
            android:textSize="@dimen/big_text_size"
            android:textStyle="bold" />
        <EditText
            android:layout_height="40dp"
            android:layout_width="100dp"
            android:textAlignment="center"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:id="@+id/tv_pass"
            android:hint="Password"
            android:textSize="15dp"
            android:textColor="#000000"
            />
        <EditText
            android:layout_gravity="center"
            android:id="@+id/conf_pass"
            android:hint="conf Password"
            android:inputType="textPassword"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="#000"
            android:textSize="@dimen/big_text_size"
            android:textStyle="bold"
            />
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:textAlignment="center"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:id="@+id/tv_adrs"
            android:textSize="15dp"
            android:textColor="#0055ff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ville"
            android:textColor="#000"
            android:textSize="@dimen/big_text_size"
            android:textStyle="bold"
            />
        <Spinner
            android:layout_gravity="center"
            android:id="@+id/Ville"
            android:layout_alignParentRight="true"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="left"
            ></Spinner>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textColor="#000"
            android:textSize="@dimen/big_text_size"
            android:textStyle="bold"
            />
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:textAlignment="center"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:id="@+id/tv_fone"
            android:textSize="15dp"
            android:textColor="#0055ff"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="130dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/save_"
            android:text="save"
            android:layout_alignLeft="@+id/button2"
            />
    </LinearLayout>
</LinearLayout><!-- From: file:/C:/Users/najm/AndroidStudioProjects/Annoncy/app/src/main/res/layout/user_profil.xml -->